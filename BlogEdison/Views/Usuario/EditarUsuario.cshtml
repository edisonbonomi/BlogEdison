@*Tipamos fortemente a View*@
@model BlogEdison.Models.Usuario.CadastrarUsuarioViewModel
@{
    ViewBag.Title = "Alteração de Usuários";
}

@using (@Html.BeginForm())
{
    <h3> Alterar Usuário</h3>
    @Html.ValidationSummary(true);

    <div class="form-group">
        @Html.LabelFor(x => x.Id)
        @Html.TextBoxFor(x => x.Id, new { @class = "form-control", style = "width: 100px", @readonly = true })
        @Html.ValidationMessageFor(x => x.Id)
        @Html.HiddenFor(x => x.Id)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Login)
        @Html.TextBoxFor(x => x.Login, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Login)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Nome)
        @Html.TextBoxFor(x => x.Nome, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Nome)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Senha)
        @Html.TextBoxFor(x => x.Senha, new { @class = "form-control", type = "password" })
        @Html.ValidationMessageFor(x => x.Senha)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.ConfirmarSenha)
        @Html.TextBoxFor(x => x.ConfirmarSenha, new { @class = "form-control", type = "password" })
        @Html.ValidationMessageFor(x => x.ConfirmarSenha)
    </div>
    <p>
        <input type="submit" value="Salvar" class="btn btn-primary" />
    </p>
}



